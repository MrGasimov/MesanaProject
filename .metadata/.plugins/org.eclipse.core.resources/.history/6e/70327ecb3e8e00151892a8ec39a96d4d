			System.out.println("this is comment status");	
			try {
				r.postMethod(commentJSON,cURL);
			}catch (Exception e){			
				e.printStackTrace();
			}
		
			JSONObject jsonElectrode = new JSONObject();
			jsonElectrode.put("comment","lot 12312");
			jsonElectrode.put("user","suli");
