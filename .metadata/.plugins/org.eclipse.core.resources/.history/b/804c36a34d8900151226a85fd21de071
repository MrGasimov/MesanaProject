package com.corvolution.cm2;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;

public class SensorConfiguration {	
	
	private String linkId ="";	
	private String patientData ="";	
	private HashMap <String, String> configSet = new HashMap<>();
	public enum Description{ECG (250),ACC(50)};
	
	public SensorConfiguration(){
		
	}
	// Configuration Set
		// Number		Name			Description
		// 1			mesana			Standard configuration for mesana (ECG: 250Hz, ACC: 50Hz, ...)
		// 2			Standard ECG	Use this configuration for standard 24 hrs ECG recording (ECG: 200Hz, ACC: no)
		// 3			Test-Config		Use this configuration set only for testing pursposes
		// 
	
	//return sample rate 
	public String getSampleRate() {
		return sampleRate;
	}
	
	//set sample rate for configuration file 
	public void setSampleRate(String rate) {
		this.sampleRate = rate;
		
	}
	
	//set linkId for configuration file 
	public void addParameter(String key, String value){
		this.configSet.put(key, value);
	}
	
	//set linkId for configuration file 
	public void addEncryptedParameter(String key, String value, String password){
		this.configSet.put(key, value);
	}
	
	public HashMap<String, String > getParameters(){
		return configSet;
	}
	
	//return linkId 
	public String getLinkId(){
		return linkId;
	}
		
	public void setPatientData(String patientData){
		this.patientData = patientData;
	}

	
	private String versionNumber;

	
	public String getVersionNumber() {
		return versionNumber;
	}

	
	public void setVersionNumber(String versionNumber) {
		this.versionNumber = versionNumber;
	}

	
	private Enum startMode;

	
	public Enum getStartMode() {
		return startMode;
	}

	
	public void setStartMode(Enum startMode) {
		this.startMode = startMode;
	}

	/**
	public ConfigurationSet getConfigurationSet() {
		return configurationSet;
	}
	
	public void setConfigurationSet(ConfigurationSet configurationSet) {
		this.configurationSet = configurationSet;
	}
	 */
	

	
	

}
